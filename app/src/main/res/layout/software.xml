<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2196F3"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".sportActivity" >

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="match_parent"
        android:layout_height="283dp"
        android:layout_marginBottom="50dp"
        app:srcCompat="@drawable/software" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="357dp"
        android:layout_height="269dp"
        android:layout_gravity="center"
        android:background="#3F51B5"
        android:text="Software is computer instructions, comprising operating systems, applications, and games. Its development involves designing, coding, testing, and maintenance to meet user needs and technological advancements, making it essential for computing."
